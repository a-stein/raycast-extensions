{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fetch-youtube-transcript",
  "version": "2.0.1",
  "title": "Fetch YouTube Transcript",
  "description": "Fetches and saves the transcript of a YouTube video in your downloads folder",
  "icon": "extension_icon.png",
  "author": "apoorv_khandelwal",
  "contributors": [
    "pernielsentikaer",
    "ridemountainpig"
  ],
  "categories": [
    "Media",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "fetch-youtube-transcript",
      "title": "Fetch YouTube Transcript",
      "description": "Fetches and saves the transcript of a YouTube video",
      "mode": "no-view",
      "arguments": [
        {
          "name": "videoUrl",
          "type": "text",
          "required": true,
          "placeholder": "Enter YouTube video URL"
        },
        {
          "name": "action",
          "type": "dropdown",
          "required": false,
          "placeholder": "Default Action",
          "default": "save",
          "data": [
            {
              "title": "Save to txt file",
              "value": "save"
            },
            {
              "title": "Copy to clipboard",
              "value": "copy"
            }
          ]
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "defaultDownloadFolder",
      "type": "directory",
      "required": false,
      "title": "Default Download Folder",
      "description": "Choose the default folder to save transcripts (if not set, will use Downloads folder)",
      "placeholder": "~/Downloads"
    },
    {
      "name": "defaultLanguage",
      "type": "dropdown",
      "required": true,
      "title": "Default Language",
      "description": "Choose the preferred language for transcripts",
      "data": [
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "Arabic",
          "value": "ar"
        },
        {
          "title": "Bengali",
          "value": "bn"
        },
        {
          "title": "Chinese",
          "value": "zh"
        },
        {
          "title": "French",
          "value": "fr"
        },
        {
          "title": "German",
          "value": "de"
        },
        {
          "title": "Hindi",
          "value": "hi"
        },
        {
          "title": "Italian",
          "value": "it"
        },
        {
          "title": "Japanese",
          "value": "ja"
        },
        {
          "title": "Korean",
          "value": "ko"
        },
        {
          "title": "Marathi",
          "value": "mr"
        },
        {
          "title": "Portuguese",
          "value": "pt"
        },
        {
          "title": "Russian",
          "value": "ru"
        },
        {
          "title": "Spanish",
          "value": "es"
        },
        {
          "title": "Tamil",
          "value": "ta"
        },
        {
          "title": "Urdu",
          "value": "ur"
        }
      ],
      "default": "en"
    },
    {
      "name": "defaultAction",
      "description": "The default action used in argument",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "save",
      "placeholder": "The default action used in the command",
      "data": [
        {
          "title": "Save to txt file",
          "value": "save"
        },
        {
          "title": "Copy to clipboard",
          "value": "copy"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^2.2.0",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@types/which": "^3.0.4",
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "overrides": {
    "cross-spawn": "^7.0.3",
    "got": "^13.0.0",
    "electron": "^32.0.0"
  },
  "platforms": [
    "macOS"
  ]
}
