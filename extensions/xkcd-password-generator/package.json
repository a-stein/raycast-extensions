{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "xkcd-password-generator",
  "title": "XKCD Password Generator",
  "description": "Generate strong passwords according to the \"xkcd\" style: https://xkcd.com/936/",
  "icon": "xkcd-pw-gen-icon.png",
  "author": "nkcmr",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Generate XKCD Password",
      "description": "Generate a strong password in the XKCD Style (https://xkcd.com/936/)",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
